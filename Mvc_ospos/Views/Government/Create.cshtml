
@{
    ViewBag.Title = "Create";
}



<form method="post" id="form_gover" action="/Government/Create">


    @Html.AntiForgeryToken()


    <h2 class="text-center">Government</h2>
    <div class="container">
        <table class="table table-responsive">
            <tr>
                <td>Name Government</td>
                <td>
                    <input type="text" id="text-govr" name="Name" class="form-control " required />
                </td>

                <td>
                    <input type="submit" value="Create" id="submit" style="width:80px" class="btn btn-primary" />
                </td>
            </tr>

        </table>



    </div>

</form>
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        $("#form_gover").validate({

            rules: {

                Name: {
                    required: true,
                    minlength:2
                },
            },
            messages: {

                Name: {
                    required: "plesse enter your goverment",
                    minlength: "plesse enter your 2 lenght"
                }
            }
        });
    });

</script>



<style>

    .error {
        
        
        color: red;
        font-size:large;
      
    }
</style>











