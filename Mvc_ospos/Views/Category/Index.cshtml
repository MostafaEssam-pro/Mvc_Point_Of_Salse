@model IEnumerable < Mvc_ospos.Models.Category>


@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="Areas" class="table  table-bordered table-hover " style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
            
        }
        </tbody>
</table>




@section Scripts{

    <script>

        $(document).ready(function () {
            $('#Areas').DataTable(


                {

                    "language": {

                        "lengthMenu": "عرض _MENU_ الصفحه",
                        "zeroRecords": "لايوجد بيانات",
                        "info": "عدد الصفحات _PAGE_ من _PAGES_",
                        "infoEmpty": "لايوجد صفحات",
                        "infoFiltered": "(تم البحث _MAX_ في جميع السطور)",
                        "paginate": {
                            "previous": "السابقه",
                            "next": "التاليه",

                        }

                    }
                }

            )

        });
    </script>

}

